<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal" android:padding="10dp"
        android:paddingStart="20dp" android:paddingEnd="5dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_outline_account_circle_24"
            android:id="@+id/img_profile_pic"
            android:contentDescription="@string/txt_profile_pic" android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/txt_account_name" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toRightOf="@id/img_profile_pic" android:textStyle="bold"
              android:textSize="18sp" android:ellipsize="middle"
              android:layout_marginStart="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_last_message" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/txt_account_name"
            app:layout_constraintLeft_toRightOf="@id/img_profile_pic"
            android:ellipsize="end" android:layout_marginStart="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>