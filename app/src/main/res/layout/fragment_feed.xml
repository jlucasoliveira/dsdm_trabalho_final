<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FeedFragment" android:id="@+id/feed_layout">


    <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="220dp" android:id="@+id/map_find_neighbors"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/txt_what_do_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_what_do_now"
            app:layout_constraintTop_toBottomOf="@+id/map_find_neighbors" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" android:textSize="18sp"
            android:textStyle="bold"/>
    <ImageView
            android:src="@drawable/ic_drill"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/img_borrow_tool"
            app:layout_constraintTop_toBottomOf="@+id/txt_what_do_now"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:contentDescription="@string/txt_borrow_tool"/>
    <TextView
            android:text="@string/txt_borrow_tool"
            android:layout_width="80dp"
            android:layout_height="wrap_content" android:id="@+id/txt_borrow_tool"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" app:layout_constraintTop_toBottomOf="@+id/img_borrow_tool"/>
    <ImageView
            android:src="@drawable/ic_help"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/img_help"
            app:layout_constraintStart_toEndOf="@+id/img_borrow_tool"
            app:layout_constraintTop_toBottomOf="@+id/txt_what_do_now" android:layout_marginTop="16dp"
            android:layout_marginStart="40dp" android:contentDescription="@string/txt_help"/>
    <TextView
            android:text="@string/txt_help"
            android:layout_width="80dp"
            android:layout_height="wrap_content" android:id="@+id/txt_help"
            app:layout_constraintTop_toBottomOf="@+id/img_help"
            app:layout_constraintStart_toEndOf="@+id/txt_borrow_tool" android:layout_marginStart="20dp"/>
    <ImageView
            android:src="@drawable/ic_running"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/img_group_workout"
            app:layout_constraintTop_toBottomOf="@+id/txt_what_do_now"
            app:layout_constraintStart_toEndOf="@+id/img_help" android:layout_marginTop="16dp"
            android:layout_marginStart="40dp" android:contentDescription="@string/txt_group_workout"/>
    <TextView
            android:text="@string/txt_group_workout"
            android:layout_width="90dp"
            android:layout_height="wrap_content" android:id="@+id/txt_group_workout"
            app:layout_constraintTop_toBottomOf="@+id/img_group_workout"
            app:layout_constraintStart_toEndOf="@+id/txt_help" android:layout_marginStart="14dp"/>
    <ImageView
            android:src="@drawable/ic_shared_car"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/img_ask_ride"
            app:layout_constraintTop_toBottomOf="@+id/txt_what_do_now"
            app:layout_constraintStart_toEndOf="@+id/img_group_workout" android:layout_marginTop="16dp"
            android:layout_marginStart="40dp" android:contentDescription="@string/txt_ask_ride"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/txt_ask_ride"
            android:layout_width="60dp"
            android:layout_height="wrap_content" android:id="@+id/txt_ask_ride"
            app:layout_constraintTop_toBottomOf="@+id/img_ask_ride"
            app:layout_constraintStart_toEndOf="@+id/txt_group_workout" android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:src="@drawable/ic_chiken"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/img_share_food"
            app:layout_constraintTop_toBottomOf="@+id/txt_borrow_tool"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:contentDescription="@string/txt_share_food"/>
    <TextView
            android:text="@string/txt_share_food"
            android:layout_width="85dp"
            android:layout_height="wrap_content" android:id="@+id/txt_share_food"
            app:layout_constraintTop_toBottomOf="@+id/img_share_food" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:src="@drawable/ic_party"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/img_invite_people"
            app:layout_constraintTop_toBottomOf="@+id/txt_help"
            android:layout_marginTop="32dp" app:layout_constraintStart_toEndOf="@+id/img_share_food"
            android:layout_marginStart="40dp" android:contentDescription="@string/txt_invite_fried"/>
    <TextView
            android:text="@string/txt_invite_fried"
            android:layout_width="65dp"
            android:layout_height="wrap_content" android:id="@+id/txt_invite_friend"
            app:layout_constraintTop_toBottomOf="@+id/img_invite_people"
            app:layout_constraintStart_toEndOf="@+id/txt_share_food" android:layout_marginStart="18dp"/>
    <ImageView
            android:src="@drawable/ic_donate_gift"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/img_donate_gift"
            app:layout_constraintTop_toBottomOf="@+id/txt_group_workout"
            app:layout_constraintStart_toEndOf="@+id/img_invite_people" android:layout_marginTop="32dp"
            android:layout_marginStart="40dp" android:contentDescription="@string/txt_donate_gift"/>
    <TextView
            android:text="@string/txt_donate_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_donate_gift"
            app:layout_constraintTop_toBottomOf="@+id/img_donate_gift"
            app:layout_constraintStart_toEndOf="@+id/txt_invite_friend" android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:src="@drawable/ic_something"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/img_other"
            app:layout_constraintTop_toBottomOf="@+id/txt_ask_ride"
            app:layout_constraintStart_toEndOf="@+id/img_donate_gift" android:layout_marginTop="32dp"
            android:layout_marginStart="40dp" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/txt_other"/>
    <TextView
            android:text="@string/txt_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_other"
            app:layout_constraintStart_toEndOf="@+id/txt_donate_gift" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_other" android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>