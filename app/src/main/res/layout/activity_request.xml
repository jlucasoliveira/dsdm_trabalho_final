<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RequestActivity" android:id="@+id/vw_request">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txt_object" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:textSize="18sp" android:textStyle="bold"
            android:paddingStart="20dp" android:paddingEnd="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toBottomOf="@+id/txt_object" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>